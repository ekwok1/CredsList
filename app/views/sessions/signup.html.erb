<div class="container-fluid">
  <div class="col-xs-4"></div>
  <div class="col-xs-4">
    <div class="row">
      <h2>Sign Up</h2>
    </div>
    <div>
      <% if @user.errors.any? %>
        <% @user.errors.full_messages.each do |error| %>
          <div class = "text-danger"><%= error %></div>
        <% end %>
      <% end %>
    </div>
    <%= form_for( @user, url: signup_path, html:{class: "form-horizontal", role:"form"}) do |f| %>

        <div class="form-group">
          <%= f.label :first_name, class: "control-label col-md-3"  %>
          <div class="col-sm-7">
            <%= f.text_field :first_name, class: "form-control", autofocus:true %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :last_name, class: "control-label col-md-3"  %>
          <div class="col-sm-7">
            <%= f.text_field :last_name, class: "form-control", autofocus:true %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :email, class: "control-label col-md-3"  %>
          <div class="col-sm-7">
            <%= f.text_field :email, class: "form-control", autofocus:true %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password, class: "control-label col-md-3"  %>
          <div class="col-sm-7">
            <%= f.password_field :password, class: "form-control" %>
          </div>
        </div>

        <div class="col-sm-offset-1">
          <%= f.submit class: "btn btn-primary" %>
          <%= link_to 'Cancel', :back, class: "btn btn-default" %>
          <div><%= link_to "Have an account already? Log in here", login_path %></div>
        </div>

      <% end %>
      
      
  </div>
  <div class="col-xs-4"></div>
</div>



