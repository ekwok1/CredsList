        <div class="col-xs-12">
          <h2><%= @item.name %></h2>
          <img class="productImg" src="<%= @item.pic_url %>" alt="Item Image">
        </div>
      </div>      
      <div class="row">
        <div class="descripTitle">Description: </div>
        <div><%= @item.description %></div>
      </div>    
