<div class="container-fluid">
  <div class="row">
    <div class="col-xs-3" id="sellerBox">
      <div id="sellerInformation">Seller Info:</div>
      <div class="sellerPic">
        <img id="sellerPic" src="<%= @item.user.profilepic_url %>">
      </div>
      <div id="sellerRating">
        <div id="sellerRatingTitle">Seller Rating:</div>
        <div>Stars</div>
      </div>


      <div id="contactInformation">Contact Information:</div>        
      <div id="sellerName">
        <span><%= @item.user.first_name %> <%= @item.user.last_name %></span>
      </div>

      <div id="sellerEmail">
        <span><%= @item.user.email %></span>
      </div>

      <div id="acceptedPay">
        Accepted Payments:
      </div>
      <div id="bitcoinImg">
        <img class="payIcon" src="<%= asset_path( 'bitcoin.png' ) %>">
      </div>

      <div>
        <button type="button" class="btn btn-default">Buy Now</button>
      </div>
    </div>
    <div class="col-xs-9">
      <div class="row">
        <div class="col-xs-12">
        <!-- item short description -->
          <h2><%= @item.name %></h2>
          <img class="productImg" src="<%= @item.pic_url %>" alt="Item Image">
        </div>
      </div>      
        <span><div class="descripTitle">Description: </div>
        <div><%= @item.description %></div></span>  
<!--       vv code for comments vv -->
<hr class="style-one">
      <div class="row">

        <div id="errors">
          
        </div>
        
        <%= form_for( @comment, url: item_path(@item)) do |f| %>
          <div class="form-group">
            <%= f.label :comment, "Comments:", class: "control-label col-sm-2 align-center" %>
            <%= f.text_field :comment, class: "form-control col-sm-6" %>
            <%= f.text_field :item, class: "form-control col-sm-6 hidden", value: params[:id] %>
            <%= f.text_field :user_id, class: "form-control col-sm-6 hidden", value: @item.user.id %>

            <%= f.submit class: "btn btn-primary" %>
          </div>
        <% end %>


        <div id="comments">
          <% @comments = @item.comments.order(id: :desc) %>
          <% @comments.each do |c| %>
            <% u = User.where(id: c.user_id)[0] %>
            <div class="comment-box">
            <div><%= u.first_name %>: <%= c.comment %></div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>



