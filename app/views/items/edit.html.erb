<div class="container-fluid">
  <h1>Edit Item</h1>
  <%= form_for( @item, url: item_path(@item) , html:{class:"form-horizontal", role:"form"}) do |f| %>
    <div class="form-group">
      <%= f.label :name, class: "col-md-1"  %>
      <div class="col-sm-3">
        <%= f.text_field :name, class: "form-control", autofocus:true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :pic_url, class: "col-md-1"  %>
      <div class="col-sm-3">
        <%= f.text_field :pic_url, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, class: "col-md-1"  %>
      <div class="col-sm-3">
        <%= f.text_field :description, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :price, class: "col-md-1"  %>
      <div class="col-sm-3">
        <%= f.number_field :price, class: "form-control", step: 0.01, value: number_with_precision(f.object.price, precision: 2) %>
      </div>
    </div>

    <div class="actions col-sm-offset-1">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to 'Cancel', :back, class: "btn btn-default" %>
    </div>

  <% end %>
</div>