<div class="container-fluid">
  <h2>Edit Item</h2>

  <% if @item.errors.any? %>
    <% @item.errors.full_messages.each do |error| %>
    <div class = "text-danger"><%= error %></div>
      <% end %>
  <% end %>

  <%= form_for( @item, url: item_path(@item)) do |f| %>
    <div class="form-group">
      <%= f.label :name %>:
      <%= f.text_field :name, class: "form-control", autofocus:true %>
    </div>
    <div class="form-group">
      <%= f.label :pic_url %>:
      <%= f.text_field :pic_url, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :description %>:
      <%= f.text_field :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :price %>:
      <%= f.number_field :price, class: "form-control", step: 0.01, value: number_with_precision(f.object.price, precision: 2) %>
    </div>
    <div class="buttonHolder">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to 'Cancel', :back, class: "btn btn-default" %>
    </div>
  <% end %>
</div>