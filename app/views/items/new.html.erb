<div class="container-fluid">
  <h1>New Item</h1>
  <%= form_for( @item, url: user_items_path , html:{class:"form-horizontal", role:"form"}) do |f| %>
        <%= f.label :name%>:
        <%= f.text_field :name, class: "form-control", autofocus:true %>
        <%= f.label :pic_url%>:
        <%= f.text_field :pic_url, class: "form-control" %>
        <%= f.label :description  %>:
        <%= f.text_field :description, class: "form-control" %>
        <%= f.label :price  %>:
        <%= f.number_field :price, class: "form-control", step: 0.01, value: number_with_precision(f.object.price, precision: 2) %>
      <div class="buttonHolder">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to 'Cancel', :back, class: "btn btn-default" %>
      </div>
    <% end %>
  </div>